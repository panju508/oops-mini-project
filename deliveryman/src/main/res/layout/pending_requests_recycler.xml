<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBodyPrimary"
    tools:context=".PendingRequests.RequestsFragment"
    android:layout_marginBottom="?attr/actionBarSize">


    <ImageView
        android:id="@+id/requests_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/empty_mail"
        android:layout_gravity="center_horizontal|center_vertical"
        android:alpha=".5"
        android:scaleType="fitCenter"
        android:visibility="gone"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/requests_recyler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        tools:listitem="@layout/request_layout">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>